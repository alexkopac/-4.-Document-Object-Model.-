<body>

    <div class="buttons-wrapper">
        <button data-info="Це підказка для Кнопки 1">Button 1</button>
        <button data-info="Тут зовсім інший текст для Кнопки 2">Button 2</button>
        <button data-info="Дуже довгий опис, який спокійно влазить в цей блок">Button 3</button>
    </div>

    <div id="info-panel">Тут з'явиться підказка</div>

    <script>
        
        const buttons = document.querySelectorAll('button');
        const infoPanel = document.getElementById('info-panel');

        buttons.forEach(btn => {
           
            btn.addEventListener('mouseenter', () => {
                const text = btn.getAttribute('data-info'); 
                infoPanel.innerText = text;                 
                infoPanel.classList.add('visible');         
            });

            
            btn.addEventListener('mouseleave', () => {
                infoPanel.classList.remove('visible');      
            });
        });
    </script>

</body>
</html>
